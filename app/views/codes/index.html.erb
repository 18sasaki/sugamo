<br />

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Key</th>
      <th>View name</th>
      <th>Short name</th>
      <th>Check string</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.code_type %></td>
        <td><%= code.code_key %></td>
        <td><%= code.view_name %></td>
        <td><%= code.short_name %></td>
        <td><%= code.check_string %></td>
        <td><%= link_to 'Show', code %></td>
        <td><%= link_to 'Edit', edit_code_path(code) %></td>
        <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

