  </div>

  <div class="field">
    <%= f.label :c_phone_number %>
    <%= f.text_field :c_phone_number %>
  </div>

  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :full_name_f %>
    <%= f.text_field :full_name_f %>
