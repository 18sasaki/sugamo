<%= form_for(code) do |f| %>
  <% if code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(code.errors.count, "error") %> prohibited this code from being saved:</h2>

      <ul>
      <% code.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code_type %>
    <%= f.text_field :code_type %>
  </div>

  <div class="field">
    <%= f.label :code_key %>
    <%= f.text_field :code_key %>
  </div>

  <div class="field">
    <%= f.label :view_name %>
    <%= f.text_field :view_name %>
  </div>

  <div class="field">
    <%= f.label :short_name %>
    <%= f.text_field :short_name %>
  </div>

  <div class="field">
    <%= f.label :check_string %>
    <%= f.text_field :check_string %>
  </div>

  <div class="actions">
    <% action_str = (action_name == 'new' ? '登録' : '変更') %>
    <%= f.submit(action_str, class: 'btn btn-success') %>
    <%= back_button_ww(action_str) %>
  </div>
